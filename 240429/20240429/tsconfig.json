{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    // js dist 폴더에서 관리
    "outDir": "dist",
    "strict": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  // scr 폴더안에 있는 파일만 컴파일링 하라!
  "include": ["src"]
}
